<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>After Login</title>
  <link rel="stylesheet" href="/afterlogin.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    /* Navbar styling */
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 30px;
      background-color: #315b8c;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    nav a.logo {
      font-size: 2rem;
      font-weight: bold;
      color: #ffffff;
      text-decoration: none;
    }
    .nav-links {
      list-style: none;
      display: flex;
      gap: 15px;
      margin: 0;
      padding: 0;
    }
    .nav-links a {
      color: #ffffff;
      font-weight: 500;
      border: none;
      padding: 0.5rem;
      border-radius: 10px;
      background-color: #315b8c;
      text-decoration: none;
      font-weight: 700;
    }
    .nav-links a:hover {
        background-color: #5b7ba8;
    }

    /* Card styling */
    .card {
      border: none;
      border-radius: 12px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 15px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
      height: 250px;
      object-fit: cover;
    }

    .card-body {
      padding: 30px;
    }

    .card-body h5 {
      font-size: 1.3rem;
      color: #333;
      font-weight: bold;
    }

    .card-body p {
      font-size: 1rem;
      color: #555;
      margin-bottom: 10px;
    }

    .card-body .btn {
      background-color: #5470b6;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    .card-body .btn1{
      background-color: #b74646;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .card-body .btn:hover {
      background-color: #3c4392;

    }
    .card-body .btn1:hover {
      background-color: #a33939;
  
    }

    /* Alert styling */
    #success-alert, #danger-alert {
      margin-top: 15px;
      font-weight: bold;
      text-align: center;
      animation: fadeOut 2.5s forwards;
    }

    @keyframes fadeOut {
      0% { opacity: 1; }
      90% { opacity: 1; }
      100% { opacity: 0; }
    }

    /* General styling */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #F8F9FA;
      color: #333;
    }

    .container {
      margin-top: 30px;
    }

    .btn-parent {
      text-align: center;
      margin-top: 30px;
    }
    /* Centering the content */
.d-flex {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 50px; /* Space between buttons */
  margin-top: 20px;
}

/* Style for the delete button */
.back-button2 {
  background-color: #e74c3c; /* Red color */
  color: white;
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.back-button2:hover {
  background-color: #c0392b; /* Darker red on hover */
}

/* Style for the view button */
.btn {
  background-color: #3498db; /* Blue color */
  color: white;
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.btn:hover {
  background-color: #2980b9; /* Darker blue on hover */
}


    .btn-parent .btn {
      background-color: #5BD2BC;
      color: #fff;
      font-weight: bold;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
    }

    /* Responsive Layout */
    @media (max-width: 1200px) {
      .container {
        margin-top: 20px;
      }
      .card-img-top {
        height: 200px;
      }
    }

    @media (max-width: 992px) {
      .nav-links {
        flex-direction: column;
        align-items: center;
      }
      .nav-links a {
        margin-bottom: 10px;
      }
    }

    @media (max-width: 768px) {
      .logo {
        font-size: 1.2rem;
      }
      .card-img-top {
        height: 200px;
      }
      .container {
        margin-top: 15px;
      }
      .btn-parent .btn {
        padding: 8px 16px;
      }
    }

    @media (max-width: 576px) {
      .logo {
        font-size: 1.1rem;
      }
      .nav-links {
        flex-direction: column;
        align-items: center;
      }
      .nav-links a {
        font-size: 0.9rem;
        margin-bottom: 8px;
      }
      .card-img-top {
        height: 200px;
      }
      .card-body h5 {
        font-size: 1.2rem;
      }
      .btn-parent .btn {
        width: 100%;
        font-size: 0.9rem;
        padding: 10px;
        margin-bottom: 20px;
      }
    }
  </style>
</head>
<body>

  <nav>
    <a href="#" class="logo">Student Portal</a>
    <ul class="nav-links">
      <li><a href="/createuser"><i class="fas fa-user-plus"></i> Create Student</a></li>
      <li><a href="/back">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/login">Login</a></li>
    </ul>
  </nav>

  <% if (success) { %>
    <div id="success-alert" class="alert alert-success">
      <%= success %>
    </div>
  <% } %>
  
  <% if (danger) { %>
    <div id="danger-alert" class="alert alert-danger">
      <%= danger %>
    </div>
  <% } %>

  <div class="container">
    <div class="row">
        <% if (newInfo.length > 0) { %>
            <% newInfo.forEach(user => { %>
                <div class="col-lg-3 col-md-6 col-12 mb-2 ">
                    <div class="card">
                      <img src="<%= user.profilePicture %>" class="card-img-top" alt="Profile Picture">

                        <div class="card-body">
                            <h5 class="card-title"><%= user.name %></h5>
                            <p class="card-text"><%= user.email %></p>
                
                            <div class="d-flex justify-content-center">
                              <form action="/deleteUser/<%= user._id %>?_method=DELETE" method="post">
                                <button class="btn1" type="submit">Delete</button>
                              </form>
                                <form action="/viewUser/<%= user._id %>" method="get">
                                  <button class="btn" type="submit">View </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-center">No users found.</p>
        <% } %>
    </div>
  </div>

  <script>
    function viewUser(userId) {
        alert('View details for user ID: ' + userId);
    }

    document.addEventListener("DOMContentLoaded", () => {

  const successAlert = document.getElementById("success-alert");
  if (successAlert) {
    setTimeout(() => {
      successAlert.style.transition = "opacity 0.5s ease";
      successAlert.style.opacity = "0"; 

      setTimeout(() => {
        successAlert.remove(); 
      }, 500);
    }, 1000); 
  }

  const dangerAlert = document.getElementById("danger-alert");
  if (dangerAlert) {
    setTimeout(() => {
      dangerAlert.style.transition = "opacity 0.5s ease";
      dangerAlert.style.opacity = "0"; 

      setTimeout(() => {
        dangerAlert.remove(); 
      }, 500);
    }, 1000); 
  }
});

</script>

  <div class="btn-parent">
    <form action="/back" method="get">
      <button class="btn" type="submit">Return To Home</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
